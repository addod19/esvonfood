<div class="main">
    <%= form_for :product do |f| %>
        <%= hidden_field_tag "user_id", "#{current_user.id}" %>
        
        <div class="field">
          <%= f.label :Name %><br />
          <%= f.text_field :name %>
        </div>


        <div class="field">
          <%= f.label :Category %><br />
          <%= f.text_field :category %>
        </div>


        <div class="field">
          <%= f.label :Image %><br />
          <%= f.file_field :image %>
        </div>


        <div class="field">
          <%= f.label :Description%><br />
          <%= f.text_area :description %>
        </div>

        <div class="field">
          <%= f.label :Price %><br />
          <%= f.text_field :price %>
        </div>

        <div class="actions">
          <%= f.submit "Add Product", class: "form-control btn btn-success mt-1" %>
        </div>
    <% end %>
</div>